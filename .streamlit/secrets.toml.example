# Streamlit Cloud Secrets Template
# Copy this content to your Streamlit Cloud app secrets:
# https://share.streamlit.io/ → Your app → Settings → Secrets

# YouTube OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID = "your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET = "your-client-secret"

# Your deployed app URL (for OAuth redirect)
# Example: https://your-app-name.streamlit.app
# Or with custom domain: https://video.yourdomain.com
APP_URL = "https://your-app-name.streamlit.app"

# Optional: Password protect the app
APP_PASSWORD = ""

# Optional: OpenAI API key for image generation
OPENAI_API_KEY = "sk-..."
